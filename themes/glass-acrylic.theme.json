{
  "name": "Glass Acrylic",
  "author": "SkellBR",
  "version": "1.0.0",
  "type": "dark",
  "category": "official",
  "readonly": true,
  "windowEffect": "acrylic",

  "colors": {
    "background": {
      "primary": "rgba(20, 20, 30, 0.65)",
      "secondary": "rgba(30, 30, 45, 0.70)",
      "tertiary": "rgba(45, 45, 60, 0.75)"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "rgba(200, 200, 220, 0.9)",
      "muted": "rgba(140, 140, 160, 0.8)"
    },
    "accent": {
      "primary": "#60a5fa",
      "hover": "#3b82f6",
      "active": "#2563eb"
    },
    "player": {
      "progress": "#60a5fa",
      "progressBackground": "rgba(60, 60, 80, 0.5)",
      "controls": "#ffffff"
    },
    "sidebar": {
      "background": "rgba(15, 15, 25, 0.75)",
      "itemHover": "rgba(60, 60, 90, 0.5)",
      "itemActive": "#60a5fa"
    }
  },

  "fonts": {
    "primary": "Segoe UI, Inter, system-ui, sans-serif",
    "secondary": "Cascadia Code, JetBrains Mono, monospace",
    "sizes": {
      "small": "12px",
      "normal": "14px",
      "medium": "16px",
      "large": "20px",
      "title": "28px"
    }
  },

  "layout": {
    "sidebar": {
      "position": "left",
      "width": "240px",
      "collapsedWidth": "70px"
    },
    "player": {
      "position": "bottom",
      "height": "90px"
    },
    "header": {
      "visible": true,
      "height": "40px"
    }
  },

  "components": {
    "borderRadius": "12px",
    "trackItem": {
      "height": "60px",
      "thumbnailSize": "48px",
      "showDuration": true,
      "showArtist": true
    },
    "buttons": {
      "borderRadius": "10px",
      "style": "filled"
    },
    "scrollbar": {
      "width": "6px",
      "thumbColor": "rgba(100, 100, 140, 0.5)",
      "trackColor": "transparent"
    }
  },

  "effects": {
    "blur": true,
    "animations": true,
    "transitionSpeed": "200ms",
    "hoverScale": 1.02
  }
}
