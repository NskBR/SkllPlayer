{
  "name": "Default Light",
  "author": "SkellBR",
  "version": "1.0.0",
  "type": "light",

  "colors": {
    "background": {
      "primary": "#ffffff",
      "secondary": "#f5f5f7",
      "tertiary": "#ebebed"
    },
    "text": {
      "primary": "#1a1a1f",
      "secondary": "#5a5a65",
      "muted": "#9a9aa5"
    },
    "accent": {
      "primary": "#7c3aed",
      "hover": "#6d28d9",
      "active": "#5b21b6"
    },
    "player": {
      "progress": "#7c3aed",
      "progressBackground": "#e0e0e5",
      "controls": "#1a1a1f"
    },
    "sidebar": {
      "background": "#f0f0f2",
      "itemHover": "#e5e5e8",
      "itemActive": "#7c3aed"
    }
  },

  "fonts": {
    "primary": "Inter, system-ui, sans-serif",
    "secondary": "JetBrains Mono, monospace",
    "sizes": {
      "small": "12px",
      "normal": "14px",
      "medium": "16px",
      "large": "20px",
      "title": "28px"
    }
  },

  "layout": {
    "sidebar": {
      "position": "left",
      "width": "240px",
      "collapsedWidth": "70px"
    },
    "player": {
      "position": "bottom",
      "height": "90px"
    },
    "header": {
      "visible": true,
      "height": "40px"
    }
  },

  "components": {
    "borderRadius": "8px",
    "trackItem": {
      "height": "60px",
      "thumbnailSize": "48px",
      "showDuration": true,
      "showArtist": true
    },
    "buttons": {
      "borderRadius": "8px",
      "style": "filled"
    },
    "scrollbar": {
      "width": "8px",
      "thumbColor": "#c5c5ca",
      "trackColor": "transparent"
    }
  },

  "effects": {
    "blur": true,
    "animations": true,
    "transitionSpeed": "200ms",
    "hoverScale": 1.02
  }
}
