{
  "name": "Default Dark",
  "author": "SkellBR",
  "version": "1.0.0",
  "type": "dark",

  "colors": {
    "background": {
      "primary": "#0a0a0f",
      "secondary": "#12121a",
      "tertiary": "#1a1a25"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#a0a0b0",
      "muted": "#606070"
    },
    "accent": {
      "primary": "#8b5cf6",
      "hover": "#7c3aed",
      "active": "#6d28d9"
    },
    "player": {
      "progress": "#8b5cf6",
      "progressBackground": "#2a2a35",
      "controls": "#ffffff"
    },
    "sidebar": {
      "background": "#08080c",
      "itemHover": "#15151f",
      "itemActive": "#8b5cf6"
    }
  },

  "fonts": {
    "primary": "Inter, system-ui, sans-serif",
    "secondary": "JetBrains Mono, monospace",
    "sizes": {
      "small": "12px",
      "normal": "14px",
      "medium": "16px",
      "large": "20px",
      "title": "28px"
    }
  },

  "layout": {
    "sidebar": {
      "position": "left",
      "width": "240px",
      "collapsedWidth": "70px"
    },
    "player": {
      "position": "bottom",
      "height": "90px"
    },
    "header": {
      "visible": true,
      "height": "40px"
    }
  },

  "components": {
    "borderRadius": "8px",
    "trackItem": {
      "height": "60px",
      "thumbnailSize": "48px",
      "showDuration": true,
      "showArtist": true
    },
    "buttons": {
      "borderRadius": "8px",
      "style": "filled"
    },
    "scrollbar": {
      "width": "8px",
      "thumbColor": "#3a3a45",
      "trackColor": "transparent"
    }
  },

  "effects": {
    "blur": true,
    "animations": true,
    "transitionSpeed": "200ms",
    "hoverScale": 1.02
  }
}
