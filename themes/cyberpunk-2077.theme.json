{
  "name": "Cyberpunk 2077",
  "author": "SkellBR",
  "version": "1.0.0",
  "type": "dark",
  "category": "community",

  "colors": {
    "background": {
      "primary": "#0a0005",
      "secondary": "#170005",
      "tertiary": "#1a0a10",
      "gradient": {
        "enabled": true,
        "type": "linear",
        "angle": 180,
        "colors": ["#170005", "#000000"],
        "stops": [10, 65]
      }
    },
    "text": {
      "primary": "#d3d3d3",
      "secondary": "#72eaf8",
      "muted": "#666677"
    },
    "accent": {
      "primary": "#72eaf8",
      "hover": "#5ad4e2",
      "active": "#42becc"
    },
    "player": {
      "progress": "#ff003c",
      "progressBackground": "#2a1520",
      "controls": "#72eaf8"
    },
    "sidebar": {
      "background": "#0a0308",
      "itemHover": "#1a0a12",
      "itemActive": "#ff003c",
      "gradient": {
        "enabled": true,
        "type": "linear",
        "angle": 180,
        "colors": ["#170005", "#050002"],
        "stops": [0, 100]
      }
    }
  },

  "fonts": {
    "primary": "Rajdhani, Inter, system-ui, sans-serif",
    "secondary": "JetBrains Mono, monospace",
    "sizes": {
      "small": "12px",
      "normal": "14px",
      "medium": "16px",
      "large": "20px",
      "title": "28px"
    }
  },

  "layout": {
    "sidebar": {
      "position": "left",
      "width": "240px",
      "collapsedWidth": "70px"
    },
    "player": {
      "position": "bottom",
      "height": "90px"
    },
    "header": {
      "visible": true,
      "height": "40px"
    }
  },

  "components": {
    "borderRadius": "4px",
    "trackItem": {
      "height": "60px",
      "thumbnailSize": "48px",
      "showDuration": true,
      "showArtist": true
    },
    "buttons": {
      "borderRadius": "4px",
      "style": "filled"
    },
    "scrollbar": {
      "width": "6px",
      "thumbColor": "#ff003c",
      "trackColor": "transparent"
    }
  },

  "effects": {
    "blur": true,
    "animations": true,
    "transitionSpeed": "150ms",
    "hoverScale": 1.02
  }
}
