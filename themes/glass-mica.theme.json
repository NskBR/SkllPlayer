{
  "name": "Glass Mica",
  "author": "SkellBR",
  "version": "1.0.0",
  "type": "dark",
  "category": "official",
  "windowEffect": "mica",

  "colors": {
    "background": {
      "primary": "rgba(25, 25, 35, 0.80)",
      "secondary": "rgba(35, 35, 50, 0.85)",
      "tertiary": "rgba(50, 50, 65, 0.90)"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "rgba(200, 200, 215, 0.95)",
      "muted": "rgba(150, 150, 170, 0.85)"
    },
    "accent": {
      "primary": "#a78bfa",
      "hover": "#8b5cf6",
      "active": "#7c3aed"
    },
    "player": {
      "progress": "#a78bfa",
      "progressBackground": "rgba(60, 60, 80, 0.6)",
      "controls": "#ffffff"
    },
    "sidebar": {
      "background": "rgba(20, 20, 30, 0.85)",
      "itemHover": "rgba(70, 70, 100, 0.5)",
      "itemActive": "#a78bfa"
    }
  },

  "fonts": {
    "primary": "Segoe UI Variable, Segoe UI, Inter, system-ui, sans-serif",
    "secondary": "Cascadia Code, JetBrains Mono, monospace",
    "sizes": {
      "small": "12px",
      "normal": "14px",
      "medium": "16px",
      "large": "20px",
      "title": "28px"
    }
  },

  "layout": {
    "sidebar": {
      "position": "left",
      "width": "240px",
      "collapsedWidth": "70px"
    },
    "player": {
      "position": "bottom",
      "height": "90px"
    },
    "header": {
      "visible": true,
      "height": "40px"
    }
  },

  "components": {
    "borderRadius": "8px",
    "trackItem": {
      "height": "60px",
      "thumbnailSize": "48px",
      "showDuration": true,
      "showArtist": true
    },
    "buttons": {
      "borderRadius": "6px",
      "style": "filled"
    },
    "scrollbar": {
      "width": "6px",
      "thumbColor": "rgba(120, 120, 160, 0.4)",
      "trackColor": "transparent"
    }
  },

  "effects": {
    "blur": true,
    "animations": true,
    "transitionSpeed": "200ms",
    "hoverScale": 1.02
  }
}
